<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/mail" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="3pt"
                android:layout_toEndOf="@+id/mail"
                android:text="Od:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="3pt"
                android:layout_toEndOf="@id/labelName"
                android:text="User nickname "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="3pt"
                android:layout_toEndOf="@id/inputName"
                android:text="12:00:00 " />


            <TextView
                android:id="@+id/inputMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelName"
                android:layout_marginStart="7pt"
                android:layout_marginBottom="7pt"
                android:layout_toEndOf="@+id/mail"
                android:text="Tu znajduje sie wiadomosc od uzytkownika"
                android:maxLines="1" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>